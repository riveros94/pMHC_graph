{
  "settings": {
    "run_name": "magextitin",
    "output_path": "data/magextitin",
    "debug": true,
    "track_steps": false,
    "edge_threshold": 10.0,
    "node_granularity": "ca_only",
    "exclude_waters": true,
    "triad_rsa": false,
    "check_depth": false,
    "rsa_filter": 0.1,
    "depth_filter": 10.0,
    "distance_diff_threshold": 2.0,
    "distance_std_threshold": 3.0,
    "distance_bin_width": 2.0,
    "depth_bins": 3,


    "classes_": {
      "residues": {
        "HID": ["ALA", "VAL", "LEU", "ILE", "MET"],
        "POL": ["SER", "THR", "ASN", "GLN", "CYS"],
        "POS": ["LYS", "ARG", "HIS"],
        "NEG": ["ASP", "GLU"],
        "ARO": ["PHE", "TYR", "TRP"],
        "ESP": ["GLY", "PRO"]
      }
    }
  },

  "inputs": [
    {
      "path": ["~/GithubProjects/Backup PMHC/pdb_input/"],
      "enable_tui": true,
      "extensions": [".pdb", ".pdb.gz", ".cif"], 
      "selectors": [
        { "name": "MHC1" }
      ]
    }
  ],
  "selectors": {
    "MHC1": {
      "chains": ["C"],
      "residues": {
        "A": [18, 19, 42, 43, 44, 54, 55, 56, 58, 59, 61, 62, 63, 64, 65, 66, 67, 68, 69, 70, 71, 72, 73, 74, 75, 76, 77, 79, 80, 81, 83, 84, 85, 89, 108, 109, 142, 143, 144, 145, 146, 147, 148, 149, 150, 151, 152, 153, 154, 155, 156, 157, 158, 159, 160, 161, 162, 163, 164, 165, 166, 167, 168, 169, 170, 171]
      }
    },
    "MHC2": {
      "chains": ["C"],
      "residues": {
        "A": [39, 53, 54, 55, 57, 58, 60, 61, 62, 64, 65, 67, 68, 69, 71]
      }
    }
  }
}
